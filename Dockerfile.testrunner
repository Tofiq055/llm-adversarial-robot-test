FROM python:3.11-slim

ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1

WORKDIR /app

# Install system dependencies (curl/git might be needed by some pip packages)
RUN apt-get update && apt-get install -y \
    curl \
    git \
    && rm -rf /var/lib/apt/lists/*

# Install python dependencies for LLM testing
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Create non-root user for security (Running adversarial code as root is unsafe)
RUN useradd -m -s /bin/bash runner
USER runner

# Source code is mounted at runtime into /app/scripts
# Data is mounted into /app/data

CMD ["sleep", "infinity"]
